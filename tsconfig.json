{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "lib": [
      "es2021",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "baseUrl": "./",
  "paths": {
    "@utils/*": [ "src/utils/*" ]
  },
  "include": [
    "./src/**/*"
  ]
}
